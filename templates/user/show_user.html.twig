{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
 
<div class="row">
    {% for user in users %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{user.nom}}</h5>
                
                <p class="card-text">{{user.nom}} LOVES SYMFONY</p>
                <p class="card-text">contactez {{user.nom}} sur son numero de telephone: {{user.telephone}}</p>
                <p class="card-text">son email est {{user.email}}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
